<section>
  <h2>What's New?</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input type="text" id="post-url" name="post-url" />
    </div>
    <div>
      <label for="post-about">Text</label>
      <input type="text" id="post-about" name="post-about" />
    </div>
    <button type="submit" class=" new-post-btn btn btn-primary">Create new post</button>
  </form>
</section>

<br />

{{#if posts.length}}
<section>
  <h2>Your Posts History</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>